	<name>zidproxy</name>
	<title>Services: ZID Proxy</title>
	<include_file>/usr/local/pkg/zid-proxy.inc</include_file>
	<aftersaveredirect>/zid-proxy_settings.php</aftersaveredirect>

	<menu>
		<name>ZID Proxy</name>
		<tooltiptext>Configure SNI-based transparent HTTPS proxy</tooltiptext>
		<section>Services</section>
		<url>/zid-proxy_settings.php</url>
	</menu>

	<service>
		<name>zid_proxy</name>
		<rcfile>zid-proxy.sh</rcfile>
		<executable>zid-proxy</executable>
		<description><![CDATA[ZID Proxy - SNI-based transparent HTTPS filtering proxy]]></description>
	</service>

	<tabs>
		<tab>
			<text>Settings</text>
			<url>/zid-proxy_settings.php</url>
			<active/>
		</tab>
		<tab>
			<text>Active IPs</text>
			<url>/zid-proxy_active_ips.php</url>
		</tab>
		<tab>
			<text>Groups</text>
			<url>/zid-proxy_groups.php</url>
		</tab>
		<tab>
			<text>Access Rules</text>
			<url>/zid-proxy_rules.php</url>
		</tab>
		<tab>
			<text>Logs</text>
			<url>/zid-proxy_log.php</url>
		</tab>
	</tabs>

	<fields>
		<field>
			<type>listtopic</type>
			<name>General Settings</name>
		</field>
		<field>
			<fielddescr>Enable</fielddescr>
			<fieldname>enable</fieldname>
			<type>checkbox</type>
			<description><![CDATA[Enable ZID Proxy service]]></description>
		</field>
		<field>
			<fielddescr>Listen Interface</fielddescr>
			<fieldname>interface</fieldname>
			<type>select</type>
			<default>all</default>
			<options>
				<option><name>All Interfaces (0.0.0.0) - Recommended for NAT</name><value>all</value></option>
				<option><name>LAN</name><value>lan</value></option>
				<option><name>WAN</name><value>wan</value></option>
			</options>
			<description><![CDATA[Select the interface where ZID Proxy will listen for connections.<br/>
			<strong>Recommended:</strong> Use "All Interfaces" to ensure proper operation with NAT port forwarding.<br/>
			<strong>Note:</strong> You will need to configure a firewall rule to redirect HTTPS traffic to this proxy.]]></description>
		</field>
		<field>
			<fielddescr>Listen Port</fielddescr>
			<fieldname>listen_port</fieldname>
			<type>input</type>
			<size>6</size>
			<default>3129</default>
			<description><![CDATA[Port to listen on. Default: 3129<br/>
			<strong>Note:</strong> Using port 443 directly may conflict with other services. It's recommended to use a different port and set up NAT redirection.]]></description>
		</field>
		<field>
			<type>listtopic</type>
			<name>Logging</name>
		</field>
		<field>
			<fielddescr>Enable Logging</fielddescr>
			<fieldname>enable_logging</fieldname>
			<type>checkbox</type>
			<default>on</default>
			<description><![CDATA[Enable connection logging to /var/log/zid-proxy.log]]></description>
		</field>
		<field>
			<type>listtopic</type>
			<name>Advanced Settings</name>
		</field>
		<field>
			<fielddescr>Rules Mode</fielddescr>
			<fieldname>rules_mode</fieldname>
			<type>select</type>
			<default>legacy</default>
			<options>
				<option><name>Legacy (IP/CIDR + Hostname rules)</name><value>legacy</value></option>
				<option><name>Groups (ordered groups + hostname rules)</name><value>groups</value></option>
			</options>
			<description><![CDATA[Select how rules are generated.<br/>
			<strong>Legacy</strong>: Uses the Access Rules tab (pfSense GUI).<br/>
			<strong>Groups</strong>: Uses the Groups tab. Order matters; first matching group wins.]]></description>
		</field>
		<field>
			<fielddescr>Connection Timeout</fielddescr>
			<fieldname>timeout</fieldname>
			<type>input</type>
			<size>6</size>
			<default>30</default>
			<description><![CDATA[Connection timeout in seconds. Default: 30]]></description>
		</field>
		<field>
			<fielddescr>Log Retention Days</fielddescr>
			<fieldname>log_retention_days</fieldname>
			<type>input</type>
			<size>6</size>
			<default>7</default>
			<description><![CDATA[How many days of daily rotated logs to keep. Default: 7]]></description>
		</field>
		<field>
			<fielddescr>Active IPs Timeout (seconds)</fielddescr>
			<fieldname>active_ips_timeout_seconds</fieldname>
			<type>input</type>
			<size>6</size>
			<default>120</default>
			<description><![CDATA[Remove an IP from the Active IPs list after this many seconds without traffic. Default: 120]]></description>
		</field>
		<field>
			<fielddescr>Active IPs Refresh (seconds)</fielddescr>
			<fieldname>active_ips_refresh_seconds</fieldname>
			<type>input</type>
			<size>6</size>
			<default>5</default>
			<description><![CDATA[How often to refresh the Active IPs snapshot and UI. Default: 5]]></description>
		</field>
	</fields>

	<adddeleteeditpagefields>
		<columnitem>
			<fielddescr>Enable</fielddescr>
			<fieldname>enable</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Listen Interface</fielddescr>
			<fieldname>interface</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Listen Port</fielddescr>
			<fieldname>listen_port</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Logging</fielddescr>
			<fieldname>enable_logging</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Rules Mode</fielddescr>
			<fieldname>rules_mode</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Timeout (s)</fielddescr>
			<fieldname>timeout</fieldname>
		</columnitem>
		<columnitem>
			<fielddescr>Log Retention (days)</fielddescr>
			<fieldname>log_retention_days</fieldname>
		</columnitem>
	</adddeleteeditpagefields>

	<custom_php_install_command>zidproxy_install();</custom_php_install_command>
	<custom_php_deinstall_command>zidproxy_deinstall();</custom_php_deinstall_command>
	<custom_php_resync_config_command>zidproxy_resync();</custom_php_resync_config_command>
	<custom_php_validation_command>zidproxy_validate($_POST, $input_errors);</custom_php_validation_command>
</packagegui>
